<% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/post_form' %>
    </section>
  </aside>
  <div class="span8">
    <h3>Subscribed Enterprise's Posts</h3>
    <%= render 'shared/feed' %>
  </div>

</div>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to the Blog</h1>
  <h2>
    This is the home page for the blog system
  </h2>
  <% if !signed_in? %>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  <% else %>
  <%= render 'static_pages/blogs' %>
  <% end %>
</div>
<% end %>